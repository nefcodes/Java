    import java.util.HashMap;

    class Solution {
        public int[] twoSum(int[] nums, int target) {


            Map<Integer, Integer> map = new HashMap<>();

            for(int i = 0; i < nums.length; i++){
                int key = target - nums[i]; // key is the number we want for our target to complete.

                if(map.containsKey(key)){
                    return new int[] {map.get(key), i}; // return index of key and ith index. (answer)
                }
                else {
                    map.put(nums[i], i); // otherwise put value along with its index in hmap
                }
            }

            return null;
        }
    }

